    // Hàm trích xuất ID từ link YouTube (Hỗ trợ cả dạng dài & rút gọn)
    function extractYouTubeId(url) {
        let match = url.match(/(?:youtu\.be\/|youtube\.com\/(?:.*v=|.*\/))([a-zA-Z0-9_-]+)/);
        return match ? match[1] : null;
    }


