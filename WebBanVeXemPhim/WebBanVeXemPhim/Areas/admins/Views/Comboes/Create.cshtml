@model WebBanVeXemPhim.Models.Combo

<div id="hienthi" class="hienthi">
    <button class="close-btn" onclick="closeSidebar()">×</button>
    <h3>Thêm Combo mới</h3>
    <form asp-action="Create" id="createForm" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="TenCombo" class="control-label">Tên Combo</label>
                    <input asp-for="TenCombo" class="form-control" required />
                    <span asp-validation-for="TenCombo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gia" class="control-label">Giá (VNĐ)</label>
                    <input asp-for="Gia" type="number" class="form-control" min="0" required />
                    <span asp-validation-for="Gia" class="text-danger"></span>
                </div>

            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Anh" class="control-label">Ảnh Combo</label>
                    <input type="file" name="AnhFile" class="form-control"  required />
                    <span asp-validation-for="Anh" class="text-danger"></span>
                </div>

                <button type="button" class="btn btn-success" onclick="submitCreateForm()">Lưu</button>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    @Html.RenderPartialAsync("_ValidationScriptsPartial")
}
