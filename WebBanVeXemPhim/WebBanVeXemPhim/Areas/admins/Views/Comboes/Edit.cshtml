@model WebBanVeXemPhim.Models.Combo


<div id="hienthi" class="hienthi">
    <button class="close-btn" onclick="closeSidebar()">
        <i class="fas fa-times"></i>
    </button>
    <h3>Sửa thông tin Combo</h3>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label class="control-label">Ảnh hiện tại</label>
            <br />
            @if (!string.IsNullOrEmpty(Model.Anh))
            {
                <img src="~/images/@Model.Anh" alt="Ảnh hiện tại" style="max-width: 200px; margin-bottom: 10px;" />
            }
        </div>

        <div class="form-group">
            <label class="control-label">Chọn ảnh mới (nếu muốn thay đổi)</label>
            <input type="file" name="fileAnh" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Gia" class="control-label"></label>
            <input asp-for="Gia" class="form-control" />
            <span asp-validation-for="Gia" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TenCombo" class="control-label"></label>
            <input asp-for="TenCombo" class="form-control" />
            <span asp-validation-for="TenCombo" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="MaCombo" />
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
